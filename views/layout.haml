!!! 5
%html{:lang => "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{href: root_uri('bootstrap', 'css', 'bootstrap.css'), rel: "stylesheet"}
    %style{type: "text/css"}
      :sass
        body
          padding-top: 60px
          padding-bottom: 40px
    %link{href: root_uri('bootstrap', 'css', 'bootstrap-responsive.css'), rel: "stylesheet"}
    :plain
      <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
      <!--[if lt IE 9]>
        <script src='http://html5shim.googlecode.com/svn/trunk/html5.js'></script>
      <![endif]-->
    %link{rel: "shortcut icon", href: "favicon.ico"}
    %link{rel: "apple-touch-icon-precomposed", sizes: "114x114", href: root_uri('bootstrap', 'ico', 'apple-touch-icon-114-precomposed.png')}
    %link{rel: "apple-touch-icon-precomposed", sizes: "72x72", href: root_uri('bootstrap', 'ico', 'apple-touch-icon-72-precomposed.png')}
    %link{rel: "apple-touch-icon-precomposed", href: root_uri('bootstrap', 'ico', 'apple-touch-icon-57-precomposed.png')}
    %title= title

  %body
    %script{src: root_uri('jquery', 'jquery.js'), type: "text/javascript"}
    %script{src: root_uri('jquery', 'jquery.eventsource.js'), type: "text/javascript"}

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{'data-toggle' => "collapse", 'data-target' => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{href: root_uri}
            DMS
          .nav-collapse
            %ul.nav
              - pages.each do |pg|
                %li{class: pg == page && 'active'}
                  %a{href: root_uri(pg)}
                    = pg.titlecase

    .container-fluid
      %div= content

      %footer
        Copyright &copy; 2012 Jakub Pastuszek

    /Optional extension scripts 
    /Placed at the end of the document so the pages load faster
    /%script{src: root_uri('bootstrap', 'js', 'jquery.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-transition.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-alert.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-modal.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-dropdown.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-scrollspy.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-tab.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-tooltip.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-popover.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-button.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-collapse.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-carousel.js'), type: "text/javascript"}
    /%script{src: root_uri('bootstrap', 'js', 'bootstrap-typeahead.js'), type: "text/javascript"}

